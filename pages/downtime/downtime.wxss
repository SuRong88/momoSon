/* pages/downtime.wxss */
page {
	background-color: #FAD600;
}

.container {
	min-height: 100vh;
}

.content {
	width: 690rpx;
	height: 80vh;
	margin-top: -8vh;
	/* margin: 0 auto; */
}

.title {
	line-height: 100rpx;
	text-align: center;
	border-radius: 16rpx;
	background-color: #fff;
	margin-bottom: 40rpx;
	font-size: 46rpx;
	font-weight: 700;
}

.main {
	/* height: 80%; */
	box-sizing: border-box;
	box-shadow: outset 0 10rpx 10rpx rgba(50, 65, 87, 0.2);
	border-radius: 16rpx;
	background-color: #fff;
	margin-bottom: 40rpx;
	padding: 40rpx;
	padding-top: 0;
}

.time {
	text-align: center;
	font-size: 40rpx;
	font-weight: 700;
	padding: 30rpx 0;
}

.img-box {
	height: 650rpx;
	margin: 0 auto;
}

.img-box .img,
.img-box .video {
	width: 100%;
	height: 100%;
	border-radius: 10rpx;
}

.btn-box {
	position: fixed;
	width: 690rpx;
	left: 30rpx;
	bottom: 100rpx;
}

.btn.plain {
	color: #fff;
	border: 1px solid #fff;
	background-color: #FAD600;
}

.btn {
	font-weight: 700;
	box-sizing: border-box;
	width: 48%;
	line-height: 80rpx;
	text-align: center;
	border-radius: 6rpx;
	font-size: 30rpx;
	color: #666;
	background-color: #fff;
}
